                android:textSize="21sp"
                app:layout_constraintStart_toEndOf="@id/gain_muscles_decline_dumbell_press_img"
                app:layout_constraintTop_toTopOf="@id/gain_muscles_decline_dumbell_press_img" />


            <ImageView
                android:id="@+id/gain_muscles_cable_crossover_img"
                android:layout_width="135dp"
                android:layout_height="139dp"
                app:srcCompat="@drawable/cable_crossover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gain_muscles_bench_press_img"/>

            <TextView
                android:id="@+id/gain_muscles_cable_crossover_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:inputType="textMultiLine"
                android:text="  Cable Crossover \n  - 12 Repeats \n  - 4 Sets"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
