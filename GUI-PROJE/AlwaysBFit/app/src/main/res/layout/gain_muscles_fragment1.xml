                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:inputType="textMultiLine"
                android:text=" Biceps Curl \n  - 12 Repeats \n  - 4 Sets"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FCE7E7"
                android:textSize="21sp"
                app:layout_constraintStart_toEndOf="@id/gain_muscles_biceps_curl_img"
                app:layout_constraintTop_toTopOf="@id/gain_muscles_biceps_curl_img" />

            <ImageView
                android:id="@+id/gain_muscles_push_up_img"
                android:layout_width="135dp"
                android:layout_height="139dp"
                app:srcCompat="@drawable/push_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gain_muscles_butterfly_img"/>

            <TextView
                android:id="@+id/gain_muscles_push_up_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:inputType="textMultiLine"
                android:text=" Push Up \n  - 12 Repeats \n  - 4 Sets"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FCE7E7"
